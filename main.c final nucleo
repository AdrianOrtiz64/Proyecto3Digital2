    LCD_Bitmap(0,0,320,240,pantallaSensor);

    if(guardo){
        char mensaje[] = "Datos guardados en SD";
        LCD_Print(mensaje, 30, 100, 3, 0xFFFF, 0x0000);
    }

    char bufferTemp[20];
    char bufferHum[20];

    sprintf(bufferTemp, "%.1fÂ°", temp);
    sprintf(bufferHum, "%.1f%%", humedad);

    LCD_Print(bufferTemp, 72, 103, 2, 0x001F, 0xFFFF);  
    LCD_Print(bufferHum, 170, 103, 2, 0x07E0, 0xFFFF); 

    if (temp > 25) {
        for (int anim = 0; anim < 4; anim++) {
